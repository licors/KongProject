<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kong2.member.MemberMapper">
 
 	<resultMap type="MemberModel" id="memberRes">
		<result property="member_num" column="member_num" />
		<result property="id_email" column="id_email" />
		<result property="password" column="password" />
		<result property="name" column="name" />
		<result property="zipcode" column="zipcode"/>
		<result property="address" column="address"/>
		<result property="address2" column="address2"/>
		<result property="phone" column="phone"/>
		<result property="company" column="company"/>
		<result property="admin" column="admin"/>
	</resultMap> 
	
 	<!-- 공통으로 사용할 select 의 -->
	<sql id="select-all-member">
	 
	</sql>
	
	<!-- 회원정보 입력 쿼리문 -->
	<insert id="MemberAdd" parameterType="MemberModel">
		insert into MEMBER values(
							member_seq.nextval,
							#{id_email}, 
							#{password}, 
							#{name}, 
							#{zipcode}, 
							#{address},
							#{address2},
							#{phone}, 
							#{company}, 
							'0' )
	</insert>
	
	<!-- 회원정보 수정 -->
	<update id="memberModify" parameterType="MemberModel"> 
		update MEMBER set  
					NAME = #{name}, 		
					PHONE = #{phone}
		where ID_EMAIL = #{id_email} 
 	</update> 
 	
 	<!-- 회원탈퇴  -->
 	<delete id="memberDelete" parameterType="String">
 		delete from MEMBER
		where ID_EMAIL = #{id_email} and NAME=#{name}
	</delete>
	
	<select id="getMember" parameterType="MemberModel">
		select * from MEMBER where ID_EMAIL = #{id_email}
	</select>
	
		<!--  아이디중복 확인 -->
	<select id="idCheck" parameterType="String" resultType="MemberModel"> 
		<include refid="select-all-member" />
		WHERE ID_EMAIL = #{id_email}
	</select> 
	
	<!-- 로그인 -->
    <select id="memberLogin" parameterType="MemberModel" resultType="MemberModel">
        select * from MEMBER where ID_EMAIL=#{id_email} and PASSWORD=#{password}
    </select>
	
	<!-- 비밀번호 찾기 -->
	<select id="passwordFind" parameterType="MemberModel" resultType="MemberModel">
		select * from MEMBER 
		where ID_EMAIL = #{id_email} and NAME=#{name}
	</select>
	
	<select id="memberList" resultType="MemberModel">
		select * from MEMBER order by MEMBER_NUM desc
	</select>
</mapper>